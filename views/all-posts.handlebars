<div class="posts">
  {{#each posts}}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <a href="/post/{{id}}">{{title}}</a>
      </h2>
      <div>
        Posted by {{user.email}} on {{format_date createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{content}}
    </div>
  </article>
  {{/each}}
</div>